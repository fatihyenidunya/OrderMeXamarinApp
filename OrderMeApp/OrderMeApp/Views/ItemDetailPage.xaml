<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderMeApp.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Product:" FontSize="Medium" />
        <Label Text="{Binding Item.Title}" FontSize="Small"/>
        <Label Text="Price:" FontSize="Medium" />
        <Label Text="{Binding Item.Price}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Item.Description}" FontSize="Small"/>
        <Entry x:Name="txtAmount" Text="5"/>
        <Button Text="Order" Clicked="onOrder" Grid.Column="7" Grid.Row="0" BackgroundColor="ForestGreen" TextColor="White"></Button>

    </StackLayout>
</ContentPage>